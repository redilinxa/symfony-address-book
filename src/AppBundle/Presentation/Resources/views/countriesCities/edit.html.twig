{% extends 'base.html.twig' %}

{% set image = "assets/img/faces/placeholder.jpg" %}

{% block title %}
    Edit Profile
{% endblock %}

{% block body %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    {{ form_start(form, {'attr': {'id': 'RegisterValidation', 'class': 'form-horizontal'} }) }}

    {% if form.vars.data.image.filename is defined %}
        {% set image = 'uploads/images/' ~ form.vars.data.image.filename %}
    {% endif %}
    <script>
        $("#country_country > option:nth-child(2)").remove();
    </script>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">mail_outline</i>
                    </div>
                    <h4 class="card-title">Register Form</h4>
                </div>
                <div class="card-body">
                    <div class="form-group bmd-form-group">
                        {{ form_widget(form.country, {'attr' : {'class': 'selectpicker', 'data-size':'7', 'data-style': 'btn btn-primary btn-round', 'title':'Select Country'}}) }}
                    </div>

                    <div class="form-group bmd-form-group">
                        {{ form_label(form.name, 'Name *',  {'attr' : {'class': 'bmd-label-floating'} }) }}
                        {{ form_widget(form.name, {'attr' : {'class': 'form-control', 'required': 'true'} }) }}
                    </div>

                    <div class="form-group bmd-form-group">
                        {{ form_label(form.zip, 'Zip *',  {'attr' : {'class': 'bmd-label-floating'} }) }}
                        {{ form_widget(form.zip, {'attr' : {'class': 'form-control'}}) }}
                        <small>If zip not applied fill with "-"</small>
                    </div>

                    <div class="form-group bmd-form-group">
                        {{ form_label(form.save, 'Submit',  {'attr' : {'class': 'bmd-label-floating'} }) }}
                        {{ form_widget(form.save, {'attr' : {'class': 'btn btn-primary'}}) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}

{% block srcipts %}
    <script>

        $(document).ready(function () {
            setFormValidation('#RegisterValidation');
        });

    </script>
{% endblock %}